<div class="panel-body">
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th>Nazwa</th>
            <th>Opis</th>
            <th class="NumericCol">Zdjęcie</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>

                <td class="bottom">@Html.ActionLink(item.Name, "Details", new { item.Id })</td>
                <td>@item.ShortDescryption</td>
                <td>
                    @if (item.ImageData != null)
